echo '### Applying latest config... ###'
rm -R 0UTPUT
mkdir 0UTPUT
ARCH=arm CROSS_COMPILE=/home/feravolt/arm/bin/arm-cortex_a8-linux-gnueabi- make fera_es209ra_defconfig
echo '### Compiling kernel... ###'
ARCH=arm CROSS_COMPILE=/home/feravolt/arm/bin/arm-cortex_a8-linux-gnueabi- make -j2
cp -f /home/feravolt/ferra/arch/arm/boot/zImage /home/feravolt/ferra/0UTPUT
