cd /home/feravolt/ferra/0UTPUT
echo '### Cleaning binaries... ###'
/home/feravolt/arm/bin/arm-cortex_a8-linux-gnueabi-strip --strip-unneeded ar6000.ko
mv /home/feravolt/ferra/0UTPUT/zImage /home/feravolt/ferra/0UTPUT/Image
mv /home/feravolt/ferra/0UTPUT/ar6000.ko /home/feravolt/ferra/0UTPUT/wifi.ko
